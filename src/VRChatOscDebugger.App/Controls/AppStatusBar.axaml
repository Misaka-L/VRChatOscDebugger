<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:VRChatOscDebugger.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:OscStatusBarViewModel"
             x:Class="VRChatOscDebugger.App.Controls.AppStatusBar">

    <Border BorderBrush="{DynamicResource SemiColorBorder}" BorderThickness="0,1,0,0">
        <StackPanel Orientation="Horizontal" Spacing="5" Margin="5, 0, 0, 0">
            <TextBlock>
                <Run Text="{Binding OscQueryServiceName }"/>
            </TextBlock>
            <TextBlock>
                <Run Text="OSCQuery Listening at:"/>
                <Run Text="{Binding OscQueryPort }"/>
            </TextBlock>

            <TextBlock>
                <Run Text="OSC Listening at:"/>
                <Run Text="{Binding OscPort }"/>
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
